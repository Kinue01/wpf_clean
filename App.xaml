<Application x:Class="clean_arch.View.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:clean_arch.View"
             xmlns:viewmodels="clr-namespace:clean_arch.View.ViewModels"
             xmlns:views="clr-namespace:clean_arch.View.Views">
    <Application.Resources>

        <DataTemplate DataType="{x:Type TypeName=viewmodels:ItemsViewModel}">
            <views:ItemsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewmodels:HomeViewModel}">
            <views:HomeView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewmodels:UsersViewModel}">
            <views:UsersView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewmodels:ItemAddViewModel}">
            <views:ItemAddView />
        </DataTemplate>

    </Application.Resources>
</Application>
